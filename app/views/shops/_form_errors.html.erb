<% if @shop.errors.any? %>
  <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded">
    <h2 class="bg-red-100 text-red-800 p-4 rounded mb-4">
        <%= "お店の登録に失敗しました" %>
    </h2>
    <ul class="list-disc ml-5 text-red-600">
      <% @shop.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>