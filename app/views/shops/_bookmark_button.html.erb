<div id="bookmark-button-for-shop-<%= shop.id %>">
  <% if current_user.bookmark?(shop) %>
    <%= button_to "お気に入り解除", shop_favorites_path(shop), method: :delete, data: { turbo_method: :delete }, form: { data: { turbo_stream: true } }, class: "bg-red-500 text-white px-3 py-1 rounded" %>
  <% else %>
    <%= button_to "お気に入り登録", shop_favorites_path(shop), method: :post, data: { turbo_method: :post }, form: { data: { turbo_stream: true } }, class: "bg-blue-500 text-white px-3 py-1 rounded" %>
  <% end %>
</div>

