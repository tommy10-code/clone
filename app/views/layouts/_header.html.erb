<header class="bg-yellow-300 py-4 px-6 flex justify-between items-center">
  <!-- 左：ロゴ -->
  <div class="text-2xl font-bold">
    <%= link_to "ロゴ", root_path, class: "hover:opacity-80" %>
  </div>

  <!-- モバイル用ハンバーガーアイコン -->
  <button
    id="menu-toggle"
    class="md:hidden text-gray-800 focus:outline-none"
    onclick="document.getElementById('mobile-menu').classList.toggle('hidden')"
  >
    <!-- 三本線 -->
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"/>
    </svg>
  </button>

  <!-- PC用メニュー -->
  <nav class="hidden md:flex space-x-6 text-gray-700 text-sm font-medium">
    <%= link_to "デート診断", "#", class: "hover:text-primary" %>
    <%= link_to "ログイン", "#", class: "hover:text-primary" %>
    <%= link_to "会員登録", "#", class: "hover:text-primary" %>
  </nav>
</header>

<!-- スマホ用メニュー（初期は非表示） -->
<nav id="mobile-menu" class="md:hidden hidden bg-yellow-100 px-6 py-4 space-y-3">
  <%= link_to "デート診断", "#", class: "block text-gray-800 hover:text-primary" %>
  <%= link_to "ログイン", "#", class: "block text-gray-800 hover:text-primary" %>
  <%= link_to "会員登録", "#", class: "block text-gray-800 hover:text-primary" %>
</nav>
