<div class="flex justify-center pt-10">
  <div class="w-full max-w-md  bg-white rounded-xl shadow-lg p-8">
    <h2 class="text-2xl text-center mb-6 font-bold">パスワード変更</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-4">
        <%= f.label :password, "新しいパスワード", class: "block text-xl font-medium mb-1" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full border border-gray-300 rounded px-4 py-2 text-lg" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, "パスワード再確認", class: "block text-xl font-medium mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border border-gray-300 rounded px-4 py-2 text-lg" %>
      </div>

      <div class="actions flex justify-center mt-4">
        <%= f.submit "パスワードを変更する", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="mt-2 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
